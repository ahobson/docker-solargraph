#!/bin/bash

set -euxo pipefail

: ${EXTRA_ARGS=""}
: ${IMAGE:=solargraph:local}

if [ -z "${1+x}" ]; then
  ARGS="socket --host 0.0.0.0"
  EXTRA_ARGS="${EXTRA_ARGS} -p 7658:7658"
else
  ARGS="$@"
  if [ "${1}" == "socket" ]; then
    EXTRA_ARGS="${EXTRA_ARGS} -p 7658:7658"
  else
    EXTRA_ARGS="-i"
  fi
fi

exec /usr/local/bin/docker \
     exec \
     ${EXTRA_ARGS} \
     -w $PWD \
     solargraph \
     solargraph $ARGS

